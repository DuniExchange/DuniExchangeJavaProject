<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ExchangeServlet</servlet-name>
        <servlet-class>Controller.Exchange.ExchangeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NotificationServlet</servlet-name>
        <servlet-class>Controller.Notification.NotificationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateSeenServlet</servlet-name>
        <servlet-class>Controller.Notification.UpdateSeenServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AcceptExchangeServlet</servlet-name>
        <servlet-class>Controller.Exchange.AcceptExchangeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DenyExchangeServlet</servlet-name>
        <servlet-class>Controller.Exchange.DenyExchangeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayAllProduct</servlet-name>
        <url-pattern>/DisplayAllProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExchangeServlet</servlet-name>
        <url-pattern>/ExchangeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NotificationServlet</servlet-name>
        <url-pattern>/NotificationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateSeenServlet</servlet-name>
        <url-pattern>/UpdateSeenServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AcceptExchangeServlet</servlet-name>
        <url-pattern>/AcceptExchangeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DenyExchangeServlet</servlet-name>
        <url-pattern>/DenyExchangeServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>DisplayAccountServelt</servlet-name>
        <servlet-class>Controller.Account.DisplayAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayAllProduct</servlet-name>
        <servlet-class>Controller.AllProduct.DisplayAllProduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayAccountServelt</servlet-name>
        <url-pattern>/account</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Controller.Access.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>Controller.Access.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DisplayHomeServlet</servlet-name>
        <servlet-class>Controller.HomePage.DisplayHomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayHomeServlet</servlet-name>
        <url-pattern>/DisplayHomeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/resource/*</url-pattern>
        <url-pattern>/framework/*</url-pattern>
        <url-pattern>/node_modules/*</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>NotificationServlet</welcome-file>
    </welcome-file-list>
</web-app>
